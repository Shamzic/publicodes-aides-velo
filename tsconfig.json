{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": "./src",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "strict": true
  },
  "include": [
    "src/**/*.ts",
    "build/*.js"
  ],
  "exclude": [
    "node_modules"
  ]
}
