{
  "name": "@betagouv/aides-velo",
  "description": "Modèle Publicodes pour le calcul des aides vélo en France",
  "version": "0.1.0-1",
  "author": "Emile Rolley <emile.rolley@beta.gouv.fr>",
  "license": "Apache-2.0",
  "type": "module",
  "main": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "files": [
    "dist",
    "publicodes-build"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "scripts": {
    "compile:rules": "publicodes compile src/rules",
    "generate": "yarn run compile:rules && bun scripts/generate.js",
    "pretest": "yarn run generate",
    "test": "vitest run --globals",
    "precompile": "yarn run generate",
    "compile": "tsup"
  },
  "dependencies": {
    "publicodes": "^1.5.1"
  },
  "peerDependencies": {
    "publicodes": "^1.5.1"
  },
  "devDependencies": {
    "@etalab/decoupage-administratif": "^4.0.0",
    "@publicodes/tools": "^1.3.0-1",
    "@types/jest": "^29.5.13",
    "bun": "^1.1.32",
    "sharp": "^0.33.5",
    "tsup": "^8.3.0",
    "typescript": "^5.6.3",
    "vitest": "^2.1.2"
  },
  "publishConfig": {
    "access": "public"
  },
  "tsup": {
    "entry": [
      "src/index.ts",
      "src/data/index.ts",
      "publicodes-build/index.js"
    ],
    "format": [
      "cjs",
      "esm"
    ],
    "sourceMap": true,
    "dts": true,
    "clean": true,
    "cjsInterop": true
  }
}
